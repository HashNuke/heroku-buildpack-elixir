#!/usr/bin/env bash

# If this var is set to true later on,
# then elixir and rebar will be rebuilt
erlang_changed=false
rebar_changed=false
elixir_changed=false

build_pack_path=$(cd $(dirname $(dirname $0)); pwd)

# Ensure dirs are present
mkdir -p $1 $2 $3

build_path=$(cd $1 && pwd)
cache_path=$(cd $2 && pwd)
env_path=$(cd $3 && pwd)

export BUILDPACK_BUILD_PATH=${build_path}
export BUILDPACK_CACHE_PATH=${cache_path}
export BUILDPACK_ENV_PATH=${env_path}

source ${build_pack_path}/lib/path_funcs.sh
source ${build_pack_path}/lib/misc_funcs.sh
source ${build_pack_path}/lib/erlang_funcs.sh
source ${build_pack_path}/lib/elixir_funcs.sh
source ${build_pack_path}/lib/app_funcs.sh

mkdir $(platform_tools_path)

commands_to_run=(
  load_config
  export_config_vars
  export_mix_env

  clean_cache

  download_erlang
  install_erlang

  download_elixir
  install_elixir
  restore_mix
  install_hex
  install_rebar

  restore_app
  app_dependencies
  copy_hex
  compile_app
  backup_app
  backup_mix
  write_profile_d_script

  run_custom_script
)

for command in "${commands_to_run[@]}"
do
  eval $command
done
